{
  "manifest_version": 3,
  "name": "Auto RTL for Arabic",
  "version": "3.0",
  "description": "Professional Arabic RTL tool with Fonts, Styling & Customization",
  "permissions": ["storage", "activeTab", "contextMenus", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-rtl": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "Alt+Shift+R"
      },
      "description": "Toggle Auto RTL ON/OFF"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}